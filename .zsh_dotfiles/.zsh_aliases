#!/usr/bin/env zsh

alias gradle="gw"
alias g="git"

# Switch out existing alias with new command
# {{existing alias}}-{{new command}}
alias_switches=("ls-exa" "cat-bat" "ps-procs" "z-cd")
for i in "${alias_switches[@]}"; do
  original_cmd=${i%-*}
  new_cmd=${i#*-}
  new_command_path=$(command -v "$new_cmd")

  if [[ -n "$new_command_path" && "$new_command_path" != "$new_cmd" ]]; then
    alias $original_cmd=$new_cmd
  fi
done
