#!/usr/bin/env zsh

# PATH specific
# -------------
path_dirs=(
  "$HOME/.local/bin"
  "$HOME/bin"
  "/usr/local/bin"
)

if [[ $IS_MAC == 1 ]]; then
  # Don't add to linux path since it's not it's not strictly necessary
  # and it's safer not to include superuser binaries to PATH
  path_dirs+=("/usr/local/sbin")
fi

for path_dir in "${path_dirs[@]}"; do
  export PATH="$path_dir:$PATH"
done

for app_exports_file in $(find "$XDG_CONFIG_HOME/zsh/apps" -type f -name 'exports'); do
  . $app_exports_file
done

# Other
# -------------
export LC_NUMERIC="en_GB.UTF-8"
export LC_TIME="en_GB.UTF-8"
export LC_COLLATE="en_GB.UTF-8"
export LC_MONETARY="en_GB.UTF-8"
export LC_MESSAGES="en_GB.UTF-8"
export FONT_NAME="FiraMono"

if [[ $IS_MAC == 0 ]]; then
  # https://github.com/bazelbuild/rules_closure/issues/351
  export OPENSSL_CONF=/dev/null
fi

unset path_dirs
