#!/usr/bin/env zsh

alias gradle="gw"
alias g="git"

# Aliases set for XDG purposes
alias wget=wget --hsts-file="$XDG_DATA_HOME/wget-hsts"

if [[ -n "$(command -v 'xbindkeys')" ]]; then
  alias xbindkeys=xbindkeys -f "$XDG_CONFIG_HOME/xbindkeys/config"
fi

# Switch out existing alias with new command
# {{existing alias}}-{{new command}}
alias_switches=("ls|exa" "cat|bat" "ps|procs" "rm|trash-put")
for i in "${alias_switches[@]}"; do
  original_cmd=${i%|*}
  new_cmd=${i#*|}
  new_cmd_path=$(command -v "$new_cmd")

  if [[ -n "$new_cmd_path" && "$new_cmd_path" != "$new_cmd" ]]; then
    alias $original_cmd=$new_cmd
  fi
done

# `z` is different to above since `zoxide` is the app and `z` is the
# command
if [[ -n "$(command -v 'zoxide')" && -n "$(command -v 'z')" ]]; then
  alias cd=z
fi

# This path is set in .local/nvim/scripts/setup/lsp.sh
path_luamake="$HOME/projects/lsp/lua-language-server/3rd/luamake/luamake"
if [ -e $path_luamake ]; then
  alias luamake=$path_luamake
fi

unset alias_switches
unset path_luamake
